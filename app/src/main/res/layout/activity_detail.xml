<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".DetailActivity">
    <data>

        <variable
                name="ad"
                type="com.penda.digitalturbinedemo.Ad" />
    </data>
    <ScrollView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="24sp"
                      android:textStyle="bold"
                      android:text="Ad Data"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/appId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:text="@{`appId:\n ` +ad.appId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/averageRatingImageURL"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:autoLink="web"
                      android:linksClickable="true"
                      android:text="@{`averageRatingImageURL:\n` +ad.averageRatingImageURL}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/bidRate"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`bidRate: ` +ad.bidRate}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/billingTypeId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`billingTypeId: ` +ad.billingTypeId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/callToAction"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`callToAction: ` +ad.callToAction}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/campaignDisplayOrder"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`campaignDisplayOrder: ` +ad.campaignDisplayOrder}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/campaignId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`campaignId: ` +ad.campaignId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/campaignTypeId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`billingTypeId: ` +ad.campaignTypeId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/categoryName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`categoryName: ` +ad.categoryName}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/clickProxyURL"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:autoLink="web"
                      android:linksClickable="true"
                      android:text="@{`clickProxyURL:\n` +ad.clickProxyURL}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/creativeId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`creativeId: ` +ad.creativeId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/homeScreen"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`homeScreen: ` +ad.homeScreen}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/impressionTrackingURL"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:autoLink="web"
                      android:linksClickable="true"
                      android:text="@{`impressionTrackingURL:\n` +ad.impressionTrackingURL}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/isRandomPick"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`isRandomPick: ` +ad.isRandomPick}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/numberOfRatings"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`numberOfRatings: ` +ad.numberOfRatings}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/productDescription"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:text="@{`productDescription:\n` +ad.productDescription}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/productId"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`productId: ` +ad.productId}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/productName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:text="@{`productName:\n` +ad.productName}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/productThumbnail"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="18sp"
                      android:autoLink="web"
                      android:linksClickable="true"
                      android:text="@{`productThumbnail:\n` +ad.productThumbnail}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
            <TextView android:id="@+id/rating"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:textSize="18sp"
                      android:text="@{`rating: ` +ad.rating}"/>
            <View android:layout_width="300dp"
                  android:layout_height="2dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="4dp"
                  android:layout_marginTop="4dp"
                  android:background="@android:color/black"/>
        </LinearLayout>

    </ScrollView>
</layout>